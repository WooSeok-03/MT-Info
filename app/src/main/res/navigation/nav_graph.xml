<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tvShowFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.android.mtinfo.MovieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" >
        <action
            android:id="@+id/action_movieFragment_to_informationFragment"
            app:destination="@id/informationFragment" />
    </fragment>
    <fragment
        android:id="@+id/informationFragment"
        android:name="com.android.mtinfo.InformationFragment"
        android:label="fragment_information"
        tools:layout="@layout/fragment_information" >
        <argument android:name="selected_movie"
            app:argType="com.android.mtinfo.data.model.movie.Movie" />
    </fragment>
    <fragment
        android:id="@+id/tvShowFragment"
        android:name="com.android.mtinfo.TvShowFragment"
        android:label="fragment_tv_show"
        tools:layout="@layout/fragment_tv_show" >
        <action
            android:id="@+id/action_tvShowFragment_to_informationFragment"
            app:destination="@id/informationFragment" />
    </fragment>
    <fragment
        android:id="@+id/interestFragment"
        android:name="com.android.mtinfo.InterestFragment"
        android:label="fragment_interest"
        tools:layout="@layout/fragment_interest" >
        <action
            android:id="@+id/action_interestFragment_to_informationFragment"
            app:destination="@id/informationFragment" />
    </fragment>
</navigation>